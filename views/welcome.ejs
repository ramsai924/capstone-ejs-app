<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@900&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body{
    margin: 0;
    padding: 0;
    background-image: url('assets/background.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    font-family: sans-serif;
}

.login-container{
    width: 370px;
    /* height: 400px; */
    top: 50%;
    left: 50%;
    position: absolute;
    background: #000;
    transform: translate(-50%, -50%);
    box-sizing: border-box;
    color: #fff;
    padding: 40px 20px;
}

.login-container img{
    width: 100px;
    height: 100px;
    position: absolute;
    left: calc(50% - 50px);
    border-radius: 50%;
    top: -50px;
}

.login-container h1{
    text-align: center;
    font-size: 20px;
}

.login-container label{
    display: block;
}

.login-container div{
    margin-bottom: 20px;
}

.login-container input[type="text"], input[type="password"]{
    width: 100%;
    border: none;
    outline: none;
    border-bottom: 1px solid #ffff;
    background: transparent;
    color: #ffff;
    height: 40px;
}

.login-container input[type="submit"]{
    width: 100%;
    border: none;
    outline: none;
    height: 40px;
    background-image: linear-gradient(to right,#F26FC9, #8772EF);
    color: #ffff;
    
}
.login-container input[type="submit"]:hover{
    cursor: pointer;
    box-shadow: 1px 1px 10px #696969;
}
a{
    display: block;
    text-align: right;
    text-decoration: none;
    color: #fff;
    font-size: 12px;
    margin-top: 10px;
}

a:hover{
    color: #d3d3d3;
    
}
    </style>
    <title>Welcome</title>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div style="display: flex;justify-content: space-around;">
                <div style="border-radius:5px;padding: 5px 10px 10px 20px;background-color: rgb(0, 0, 0);width: 100%;margin: 2px;text-align: center;cursor: pointer;"
                    id="buyertext">
                    <h6 class="modal-title" id="buyer">Buyer</h6>
                </div>
                <div style="border-radius:5px;padding: 5px 10px 10px 20px;background-color: rgb(128, 51, 230);width: 100%;margin: 2px;text-align: center;cursor: pointer;"
                    id="sellertext">
                    <h6 class="modal-title" id="seller">Seller</h6>
                </div>
            </div>


           <div id="buyerform">
            
                <div id="buyerRegisterForm">
                    <form action="/auth/registerbuyer" method="POST">
                    
                        <div>
                            <label>Username : </label>
                            <input type="text" name="name" placeholder="Enter your username">
                        </div>
                        <div>
                            <label>Email : </label>
                            <input type="text" name="email" placeholder="Enter your Email">
                        </div>
                        <div>
                            <label>Phone Number : </label>
                            <input type="text" name="phonenumber" placeholder="Enter your Phone number ">
                        </div>
                        <div>
                            <label>Password</label>
                            <input type="password" name="password" placeholder="Enter your password ">
                        </div>
                        <input type="submit" name="login" value="LOGIN">
                        <a type="button" id="gotoBuyerLog">Already user ?</a>
                    
                    </form>
                </div>


                <div style="display: none;" id="buyerloginForm">
                    <form action="/auth/loginbuyer" method="POST">
                    
                       
                        <div>
                            <label>Email : </label>
                            <input type="text" name="email" placeholder="Enter your Email">
                        </div>
                        <div>
                            <label>Password</label>
                            <input type="password" name="password" placeholder="Enter your password ">
                        </div>
                        <input type="submit" name="login" value="LOGIN">
                        <a type="button" id="gotoBuyerReg">New user ?</a>
                    
                    </form>
                </div>
           </div>


           <div id="sellerform" style="display: none;">
                <div id="sellerRegisterForm">
                    <form action="/auth/registerseller" method="POST">
                    
                        <div>
                            <label>seller Username : </label>
                            <input type="text" name="name" placeholder="Enter your username">
                        </div>
                        <div>
                            <label>Email : </label>
                            <input type="text" name="email" placeholder="Enter your Email">
                        </div>
                        <div>
                            <label>Phone Number : </label>
                            <input type="text" name="phonenumber" placeholder="Enter your Phone number ">
                        </div>
                        <div>
                            <label>Password</label>
                            <input type="password" name="password" placeholder="Enter your password ">
                        </div>
                        <input type="submit" name="login" value="LOGIN">
                        <a type="button" id="gotoSellerLog">Already user ?</a>
                    
                    </form>
                </div>

                <div style="display: none;" id="sellerloginForm">
                    <form action="/auth/loginseller" method="POST">
                
                
                        <div>
                            <label>Email : </label>
                            <input type="text" name="email" placeholder="Enter your Email">
                        </div>
                        <div>
                            <label>Password</label>
                            <input type="password" name="password" placeholder="Enter your password ">
                        </div>
                        <input type="submit" name="login" value="LOGIN">
                        <a type="button" id="gotoSellerReg">New user ?</a>
                
                    </form>
                </div>
           </div>
        </div>
    </div>
    
    <script>
        
        $(document).ready(function () {

                $("#buyer").click(function () {
                    $("#sellerform").hide()
                    $("#buyerform").show()
                    $("#buyertext").css({ "background-color": 'black' })
                    $("#sellertext").css({ "background-color": "rgb(128, 51, 230)" })
                })

                $("#seller").click(function () {
                    $("#sellerform").show()
                    $("#buyerform").hide()
                    $("#sellertext").css({ "background-color": "black" })
                    $("#buyertext").css({ "background-color": "rgb(128, 51, 230)" })
                })

                $("#popup").css("height", "auto")

            });

            // buyer events
            $("#gotoBuyerLog").click(function(){
                $("#buyerloginForm").show()
                $("#buyerRegisterForm").hide()
            });

            $("#gotoBuyerReg").click(function () {
                $("#buyerloginForm").hide()
                $("#buyerRegisterForm").show()
            });

            // seller events
             $("#gotoSellerLog").click(function () {
                $("#sellerloginForm").show()
                $("#sellerRegisterForm").hide()
            });

            $("#gotoSellerReg").click(function () {
                $("#sellerloginForm").hide()
                $("#sellerRegisterForm").show()
            });

    </script>
</body>
</html>