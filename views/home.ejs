<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@900&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/public/style/home.css" type="text/css">
   
    <title>Home</title>
</head>

<body>
    <div style="position: relative;top: 50%;">
        <div class="topnav" id="myTopnav">
            <div class="container">
                <a href="/" class="home-tag" style="color: black;" id="home">Home</a>
                <div id="alignment">


                    <a href="/profile">About us</a>
                    <a href="/profile">Contact us</a>
                    <a href="/profile">Profile</a>
                    <a href="/logout">Logout</a>

                </div>
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i style="font-size: 30px;display: none;" class="fa fa-times" aria-hidden="true"></i>
                    <i style="font-size: 30px;" class="fa fa-bars" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>

    
       <% if(user != undefined){ %>
           <% if(user.usertype === "buyer"){ %>
                <div class="buyerSection">
                    <div class="container">
                        <div style="margin-top: 50px;display: flex;">
                           <div>
                                <form action="/" method="get">
                                    <input type="hidden" value="17.32131" name="latitude">
                                    <input type="hidden" value="78.65575" name="longitude">
                                    <input type="hidden" value="50" name="distance">
                                    <input type="submit" value="Get users NearBy" id="getuserNearBtn"
                                        style="background-color: #000080;border-radius: 75px;border: none; color: white;outline: none;padding: 10px;padding-bottom: 12px;">
                                </form>
                           </div>

                           <div id="acceptedIteams" style="cursor: pointer;">
                               <p style="margin-left: 30px;margin-top: 9px;" id="accepteds"> <strong>Accepted Orders</strong></p>
                           </div>
                        </div><hr>

                        <div id="foundusersNear">
                           <%  if(!usersFound){ %>
                                <p style="text-align: center;margin-top: 20%;">Click on get users button To get users near you</p>
                            <% }else{ %>
                               <% if(usersFound.length <= 0){ %>
                                <p style="text-align: center;margin-top: 20%;">No users Found Near you</p>
                               <% }else{ %>
                                    <% usersFound.forEach((users) => { %>
                                    <div id="foundData">
                                        <div style="padding: 10px;" class="container">
                                            <div class="row">
                                                <div class="col-md-4">
                                                    <img src="<%= users.image %>" loading="eager" alt="" width="110" height="110" style="margin-top: 5px;border-radius: 5px;">
                                                </div>
                                                <div class="col-md-4">
                                                    
                                                    <p><strong>Name</strong> : <%= users.userid.name %></p>
                                                    <p><strong>Phone Number</strong> : <%= users.userid.phonenumber %></p>
                                                    <p><strong>Scrape Type</strong> : <%= users.scarpType %></p>
                                                </div>
                                                <div class="col-md-4">
                                                    <div style="display: flex;margin: 10px;">
                                                        <div>
                                                            <form action="/acceptOrder" method="post">
                                                                <input type="hidden" name="soldDataId" value="<%= users._id %>">
                                                                <input type="hidden" name="sellerid" value="<%= users.userid._id %>">
                                                                <input type="hidden" name="buyerid" value="<%= user._id %>">
                                                                <input type="submit" value="Accept order"
                                                                     style="background-color: #000080;border-radius: 75px;border: none; color: white;outline: none;padding: 8px;padding-bottom: 9px;">
                                                            </form>
                                                        </div>
                                                                    
                                                        <div>
                                                            <div style="background-color: #000080;border-radius: 20px;padding: 8px ;width: 40px;margin-left: 5px;">
                                                                <a href="https://www.google.com/maps?q=<%= users.location.coordinates[1] %>,<%= users.location.coordinates[0] %>"><i 
                                                                    class="fa fa-location-arrow" aria-hidden="true" style="color: white;margin-left: 5px;"></i></a>
                                                             </div>
                                                                    
                                                         </div>
                                                                    
                                                        <div>
                                                            <div style="background-color: #000080;border-radius: 20px;padding: 8px ;width: 40px;margin-left: 5px;">
                                                                <i class="fa fa-phone" aria-hidden="true" style="color: white;margin-left: 5px;"></i>
                                                            </div>
                                                         </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>
                              <% } %>
                           <%  } %>
                        </div>


                        <!-- accepted orders section -->
                        <div id="acceptedOrderFound" style="display: none;">
                           <%  if(acceptedOrders.length > 0){ %>
                                <% acceptedOrders.forEach((seller) => { %>
                                 <% if(seller.soldDataId.orderStatus === "ongoing"){ %>
                                        <div id="foundData">
                                            <div style="padding: 10px;" class="container">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                       
                                                        <p><strong>Name</strong> : <%= seller.soldDataId.userid.name %></p>
                                                        <p><strong>Phone Number</strong> : <%= seller.soldDataId.userid.phonenumber %></p>
                                                        <p><strong>Scrape Type</strong> : <%= seller.soldDataId.scarpType %></p>
                                                    </div>
                                                    <div class="col-md-6">
                                                       <div style="display: flex;margin: 10px;">
                                                           <div>
                                                                <form action="/completeOrder" method="post">
                                                                    <input type="hidden" name="acceptedOrderId" value="<%= seller._id %>">
                                                                    <input type="hidden" name="sellerdataId" value="<%= seller.soldDataId._id %>">
                                                                    <input type="submit" value="Complete order"
                                                                        style="background-color: #000080;border-radius: 75px;border: none; color: white;outline: none;padding: 8px;padding-bottom: 9px;">
                                                                </form>
                                                           </div>

                                                           <div style="margin-left: 5px;"> 
                                                                <form action="/rejectOrder" method="post">
                                                                    <input type="hidden" name="acceptedOrderId" value="<%= seller._id %>">
                                                                    <input type="hidden" name="sellerdataId" value="<%= seller.soldDataId._id %>">
                                                                    <input type="submit" value="Reject order"
                                                                        style="background-color: #000080;border-radius: 75px;border: none; color: white;outline: none;padding: 8px;padding-bottom: 9px;">
                                                                </form>
                                                           </div>

                                                           <div>
                                                            <div style="background-color: #000080;border-radius: 20px;padding: 8px ;width: 40px;margin-left: 5px;">
                                                                <a href="https://www.google.com/maps?q=<%= seller.soldDataId.location.coordinates[1] %>,<%= seller.soldDataId.location.coordinates[0] %>"><i
                                                                        class="fa fa-location-arrow" aria-hidden="true" style="color: white;margin-left: 5px;"></i></a>
                                                            </div>
                                                            
                                                           </div>

                                                           <div>
                                                            <div style="background-color: #000080;border-radius: 20px;padding: 8px ;width: 40px;margin-left: 5px;">
                                                                <i class="fa fa-phone" aria-hidden="true" style="color: white;margin-left: 5px;"></i>
                                                            </div>
                                                           </div>
                                                       </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                 <% } %>
                                <% }) %>
                           <%  }else{ %>
                            <p style="text-align: center;margin-top: 20%;">No accepted orders</p>
                           <% } %>
                        </div>


                    </div>
                </div>
            <%}else if(user.usertype === "seller"){ %>
                <div class="sellerSection">
                    <div class="container">
                        <div style="display: flex;margin-top: 50px;">
                            <div id="postedDataBtn">
                                <p class="active" style="padding: 5px;cursor: pointer;" id="posted"><strong> Your seller data</strong> </p>
                            </div>
                            <div id="ongoingDataBtn">
                                <p style="margin-left: 15px;padding: 5px;cursor: pointer;" id="ongo"><strong> Ongoing orders</strong> </p>
                            </div>
                        </div>
                        <hr>
                           <div id="addScrap">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModals"
                                style="background-color: #000080;border-radius: 75px;border: none; color: white;outline: none;padding: 10px;padding-bottom: 12px;
                                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                                    Add scrap details
                                </button>
                           </div>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModals" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <!-- add scrape form data -->
                                        <div>
                                            <form action="/addscarp" method="POST" enctype="multipart/form-data">
                                           
                                            <input type="hidden" class="form-control" name="userid" value="<%= user._id %>">
                                                
                                            
                                            <div class="custom-file">
                                                <label for="scarpType">Image : <span style="color: red;">*</span></label>
                                                <input type="file" class="custom-file-input" id="customFile" name="images" required> 
                                                <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                                <div class="form-group">
                                                    <label for="scarpType">scrap type : <span style="color: red;">*</span></label>
                                                    <select id="scarpType" name="scarpType" class="form-control">
                                                        <option value="">select</option>
                                                        <option value="Books">Books</option>
                                                        <option value="Bottels">Bottels</option>
                                                        <option value="Batteries">Batteries</option>
                                                        
                                                    </select>
                                                </div>
                                               <div class="form-group">
                                                    <label for="validationServer01">H-no :</label>
                                                    <input type="text" class="form-control" id="validationServer01" placeholder="Enter hno" name="hno">
                                                
                                                </div>

                                                <div class="form-group">
                                                    <label for="village">village:</label>
                                                    <input type="text" class="form-control" placeholder="Enter village" name="village">
                                                </div>
                                                <div class="form-group">
                                                    <label for="street">street:</label>
                                                    <input type="text" class="form-control" placeholder="Enter street" name="street">
                                                </div>
                                                <div class="form-group">
                                                    <label for="mandal">mandal:</label>
                                                    <input type="text" class="form-control" placeholder="Enter mandal" name="mandal">
                                                </div>
                                                <div class="form-group">
                                                    <label for="district">district:</label>
                                                    <input type="text" class="form-control" placeholder="Enter district" name="district">
                                                </div>
                                                <div class="form-group">
                                                    <label for="state">state:</label>
                                                    <input type="text" class="form-control" placeholder="Enter state" name="state">
                                                </div>
                                                <div class="form-group">
                                                    <label for="pincode">pincode:</label>
                                                    <input type="text" class="form-control" placeholder="Enter pincode" name="pincode">
                                                </div>

                                           
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="container" id="postedData">
                        
                       <% if(userData){ %>
                            <%if(userData.length > 0){ %>
                                <%userData.forEach((sellerData) => { %>
                                    
                                    
                                   <div >
                                        <div id="foundData">
                                            <div style="padding: 10px;" class="container">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <img src="<%= sellerData.image %>" loading="eager" alt="" width="110" height="110"
                                                            style="margin-top: 5px;border-radius: 5px;">
                                                    </div>
                                                    <div class="col-md-4">
                                                        <p><strong>Scrape Type</strong> : <%= sellerData.scarpType %></p>
                                                        <p><strong>Address</strong> : <%= sellerData.hno %> ,<%= sellerData.village %>,
                                                            <%= sellerData.street %>,
                                                            <%= sellerData.mandal %>, <%= sellerData.district %>, <%= sellerData.pincode %> </p>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div style="display: flex;margin: 10px;">
                                                            <div>
                                                                <form action="/edits" method="post">
                                                                    <input type="hidden" name="sellerdataId" value="<%= user._id %>">
                                                                    <input type="submit" value="Edit" style="background-color: #000080;border-radius: 30px;border: none; color: white;outline: none;padding: 8px;padding-bottom: 9px;
                                                                                                            padding-left: 15px; padding-right: 15px;">
                                                                </form>
                                                            </div>
                                        
                                                            <div>
                                                                <div
                                                                    style="background-color: #000080;border-radius: 20px;padding: 8px ;width: 40px;margin-left: 5px;">
                                                                    <a href=""><i class="fa fa-trash" aria-hidden="true"
                                                                            style="color: white;margin-left: 5px;"></i></a>
                                                                </div>
                                        
                                                            </div>
                                        
                                        
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                   </div>

                                   
                                   
                                <%}) %>
                           <% }else{ %>
                               <p style="text-align: center;margin-top: 20%;">Post the scrape data</p>
                           <% } %>
                       <% }else{ %>
                            <p style="text-align: center;margin-top: 20%;">You haven't posted any data</p>
                       <% } %>
                    </div>

                    <div id="ongoingOrder" class="container" style="display: none;">
                        <% if(acceptedOrders.length > 0){ %>
                            <% acceptedOrders.forEach((order) => { %>
                                <% if(order.soldDataId.orderStatus === "ongoing"){ %>
                                        <div id="foundData">
                                            <div style="padding: 10px;" class="container">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <img src="<%= order.soldDataId.image %>" loading="eager" alt="" width="110" height="110"
                                                            style="margin-top: 5px;border-radius: 5px;">
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div style="margin: 10px;">
                                                            <p><strong>Scrape Type</strong> : <%= order.soldDataId.scarpType %></p>
                                                            <p><strong>Address</strong> : <%= order.soldDataId.hno %> ,<%= order.soldDataId.village %>,
                                                                <%= order.soldDataId.street %>,
                                                                <%= order.soldDataId.mandal %>, <%= order.soldDataId.district %>,
                                                                <%= order.soldDataId.pincode %> </p>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                        
                                                        <p style="margin : 10px;"><strong>Buyer Name </strong>: <%= order.buyerid.name %></p>
                                                        <div style="display: flex;margin: 10px;">
                                        
                                                            <p><strong>Buyer Contact </strong>: <%= order.buyerid.phonenumber %> </p>
                                                            <div>
                                                                <div
                                                                    style="background-color: #000080;border-radius: 20px;padding: 8px ;width: 40px;margin-left: 30px;margin-top: -5px;">
                                                                    <a href=""><i class="fa fa-phone" aria-hidden="true"
                                                                            style="color: white;margin-left: 5px;"></i></a>
                                                                </div>
                                        
                                                            </div>
                                        
                                        
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                <% } %>
                            <% }) %>
                        <% }else{ %>
                            <p style="text-align: center;margin-top: 20%;">You dont have any ongoing orders</p>
                        <% } %>
                    </div>
                   
                </div>
           <% } %>
       <% } %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";

                document.querySelector(".topnav").style.background = "black"
                document.querySelector(".fa-times").style.display = "block"

            } else {
                x.className = "topnav";
                document.querySelector(".topnav").style.background = "transparent"

                document.querySelector(".fa-times").style.display = "none"
            }
        }


        //Buyer events
        $("#acceptedIteams").click(function(){
            $("#acceptedOrderFound").show()
            $("#foundusersNear").hide()
            $("#accepteds").addClass("active")
            $(".active").css({ "padding" : "3px" , "margin-top" : "-0px"})
        });
        $("#getuserNearBtn").click(function(){
            $("#accepteds").removeClass("active")
        });


        //seller events
        $("#postedDataBtn").click(function(){
            $("#postedData").show()
            $("#ongoingOrder").hide()
            $("#posted").addClass("active")
            $("#ongo").removeClass("active")
        });

        $("#ongoingDataBtn").click(function(){
            $("#ongoingOrder").show()
            $("#postedData").hide()
            $("#posted").removeClass("active")
            $("#ongo").addClass("active")
            
        });
    </script>
</body>

</html>