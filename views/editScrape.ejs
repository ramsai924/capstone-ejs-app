<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@900&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/public/style/home.css" type="text/css">
    <title>Edit</title>
    <style>
        #form{
              background-color:#FFFAFA;
              box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
</head>

<body>
    <div style="position: relative;top: 50%;">
        <div class="topnav" id="myTopnav">
            <div class="container">
                <a href="/" class=" home-tag" style="color: black;" id="home">Home</a>
                <div id="alignment">

                    <a href="/profile">About us</a>
                    <a href="/profile">Contact us</a>

                    <a href="/profile">Profile</a>
                    <a href="/logout">Logout</a>

                </div>
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i style="font-size: 30px;display: none;" class="fa fa-times" aria-hidden="true"></i>
                    <i style="font-size: 30px;" class="fa fa-bars" aria-hidden="true"></i>
                </a>
            </div>
        </div>
    </div>
    
 
  <%  if(sellerData){ %>
    
        
       
       <div class="container" style="margin-top: 20px;">

        <h6 style="text-align: center;padding: 10px;">Edit scrape details</h6><hr>

        <div style="background-color: #000080;border-radius: 20px;padding: 8px ;width: 40px;margin-left: 5px;margin-bottom: 15px;">
            <a href="/"><i class="fa fa-arrow-left" aria-hidden="true"
                    style="color: white;margin-left: 5px;"></i></a>
        </div>

           <div style="padding: 30px;margin-bottom: 50px;" id="form" >
                <img src="/<%= sellerData.image %> " alt="" width="150" height="150" style="border-radius: 5px;">
                <form action="" method="POST" enctype="multipart/form-data" style="margin-top: 5px;">
                
                
                
                    <div class="custom-file">
                        <label for="images">Image : <span style="color: red;">*</span></label>
                        <input type="file" class="custom-file-input" id="customFile" name="images">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <div class="form-group">
                        <label for="scarpType">scrap type : <span style="color: red;">*</span></label>
                        <select id="scarpType" name="scarpType" class="form-control">
                            <option value="<%= sellerData.scarpType %>">selected : <%= sellerData.scarpType %></option>
                            <option value="Books">Books</option>
                            <option value="Bottels">Bottels</option>
                            <option value="Batteries">Batteries</option>
                
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="validationServer01">H-no :</label>
                        <input type="text" class="form-control" value="<%= sellerData.hno %>" id="validationServer01"
                            placeholder="Enter hno" name="hno">
                
                    </div>
                
                    <div class="form-group">
                        <label for="village">village:</label>
                        <input type="text" class="form-control" value="<%= sellerData.village %>" placeholder="Enter village"
                            name="village">
                    </div>
                    <div class="form-group">
                        <label for="street">street:</label>
                        <input type="text" class="form-control" value="<%= sellerData.street %>" placeholder="Enter street"
                            name="street">
                    </div>
                    <div class="form-group">
                        <label for="mandal">mandal:</label>
                        <input type="text" class="form-control" value="<%= sellerData.mandal %>" placeholder="Enter mandal"
                            name="mandal">
                    </div>
                    <div class="form-group">
                        <label for="district">district:</label>
                        <input type="text" class="form-control" value="<%= sellerData.district %>" placeholder="Enter district"
                            name="district">
                    </div>
                    <div class="form-group">
                        <label for="state">state:</label>
                        <input type="text" class="form-control" value="<%= sellerData.state %>" placeholder="Enter state" name="state">
                    </div>
                    <div class="form-group">
                        <label for="pincode">pincode:</label>
                        <input type="text" class="form-control" value="<%= sellerData.pincode %>" placeholder="Enter pincode"
                            name="pincode">
                    </div>
                    <button type="submit" class="btn btn-primary"
                    style="background-color: #000080;border-radius: 20px;padding: 8px ;margin-left: 5px;margin-bottom: 15px;
                    padding-left: 15px;padding-right: 15px;">update</button>
                
                </form>
           </div>
            
        </div>
               
                
      

   <% } %>


    <script>
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";

                document.querySelector(".topnav").style.background = "black"
                document.querySelector(".fa-times").style.display = "block"

            } else {
                x.className = "topnav";
                document.querySelector(".topnav").style.background = "transparent"

                document.querySelector(".fa-times").style.display = "none"
            }
        }
    </script>
</body>

</html>